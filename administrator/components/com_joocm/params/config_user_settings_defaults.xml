<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>Registration User Settings Defaults</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2012 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for default user settings on registration</description>
	<params addpath="/administrator/components/com_joocm/elements">
		<param name="show_email" type="radio" default="1" label="COM_JOOCM_SHOWEMAIL" description="COM_JOOCM_SHOWEMAILDESC">
			<option value="0">COM_JOOCM_NO</option>
			<option value="1">COM_JOOCM_YES</option>
		</param>
		<param name="show_online_state" type="radio" default="0" label="COM_JOOCM_SHOWONLINESTATE" description="COM_JOOCM_SHOWONLINESTATEDESC">
			<option value="0">COM_JOOCM_NO</option>
			<option value="1">COM_JOOCM_YES</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="time_zone" type="timezones" default="" label="COM_JOOCM_TIMEZONE" description="COM_JOOCM_TIMEZONEDESC" />
		<param name="time_format" type="joocmtimeformats" default="" label="COM_JOOCM_TIMEFORMAT" description="COM_JOOCM_TIMEFORMATDESC" />						
	</params>
</install>
