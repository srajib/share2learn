<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="component">
	<name>Feed Configuration</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2012 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Feed Configuration</description>
	<params>
		<param name="enable_feeds" type="radio" default="1" label="COM_JOOBB_ENABLEFEEDS" description="COM_JOOBB_ENABLEFEEDSDESC">
			<option value="0">COM_JOOBB_NO</option>
			<option value="1">COM_JOOBB_YES</option>
		</param>
		<param name="feed_items_count" type="text" size="50" default="10" label="COM_JOOBB_FEEDITEMSCOUNT" description="COM_JOOBB_FEEDITEMSCOUNTDESC" />
		<param name="feed_items_type" type="list" size="50" default="0" label="COM_JOOBB_FEEDITEMSTYPE" description="COM_JOOBB_FEEDITEMSTYPEDESC">
			<option value="0">COM_JOOBB_TOPICS</option>
			<option value="1">COM_JOOBB_POSTS</option>
		</param>
	    <param name="@spacer" type="spacer" default="" label="" description="" />
	    <param name="feed_desc_trunk_size" type="text" size="5" default="0" label="COM_JOOBB_FEEDDESCTRUNKSIZE" description="COM_JOOBB_FEEDDESCTRUNKSIZEDESC" />
	    <param name="feed_desc_html_syndicate" type="radio" default="0" label="COM_JOOBB_FEEDDESCHTMLSYNDICATE" description="COM_JOOBB_FEEDDESCHTMLSYNDICATEDESC">
			<option value="0">COM_JOOBB_NO</option>
			<option value="1">COM_JOOBB_YES</option>
	    </param>
	    <param name="@spacer" type="spacer" default="" label="" description="" />
	    <param name="feed_image_title" type="text" size="50" default="Joo!BB Logo" label="COM_JOOBB_FEEDIMAGETITLE" description="COM_JOOBB_FEEDIMAGETITLEDESC" />
	    <param name="feed_image_url" type="text" size="50" default="http://www.joobb.org/images/logo.png" label="COM_JOOBB_FEEDIMAGEURL" description="COM_JOOBB_FEEDIMAGEURLDESC" />
	    <param name="feed_image_link" type="text" size="50" default="http://www.joobb.org/" label="COM_JOOBB_FEEDIMAGELINK" description="COM_JOOBB_FEEDIMAGELINKDESC" />
	    <param name="feed_image_description" type="textarea" cols="30" rows="5" default="This feed is provided by joobb.org. Please click to visit." label="COM_JOOBB_FEEDIMAGEDESCRIPTION" description="COM_JOOBB_FEEDIMAGEDESCRIPTIONDESC" />
	    <param name="feed_image_desc_trunk_size" type="text" size="5" default="0" label="COM_JOOBB_FEEDIMAGEDESCTRUNKSIZE" description="COM_JOOBB_FEEDIMAGEDESCTRUNKSIZEDESC" />
	    <param name="feed_image_desc_html_syndicate" type="radio" default="0" label="COM_JOOBB_FEEDIMAGEHTMLSYNDICATE" description="COM_JOOBB_FEEDIMAGEHTMLSYNDICATEDESC">
			<option value="0">COM_JOOBB_NO</option>
			<option value="1">COM_JOOBB_YES</option>
	    </param>
	</params>
</install>