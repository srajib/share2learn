	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Latest Posts Configuration</description>
	<params>
		<param name="enable_filter" type="radio" default="1" label="COM_JOOBB_ENABLELATESTPOSTSFILTER" description="COM_JOOBB_ENABLELATESTPOSTSFILTERDESC">
			<option value="0">COM_JOOBB_NO</option>
			<option value="1">COM_JOOBB_YES</option>
		</param>
		<param name="latest_post_hours" type="text" size="50" default="8,12" label="COM_JOOBB_LATESTPOSTHOURS" description="COM_JOOBB_LATESTPOSTHOURSDESC" />
		<param name="latest_post_days" type="text" size="50" default="1,2,3" label="COM_JOOBB_LATESTPOSTDAYS" description="COM_JOOBB_LATESTPOSTDAYSDESC" />
		<param name="latest_post_weeks" type="text" size="50" default="1" label="COM_JOOBB_LATESTPOSTWEEKS" description="COM_JOOBB_LATESTPOSTWEEKSDESC" />
		<param name="latest_post_months" type="text" size="50" default="1,6" label="COM_JOOBB_LATESTPOSTMONTHS" description="COM_JOOBB_LATESTPOSTMONTHSDESC" />
		<param name="latest_post_years" type="text" size="50" default="1" label="COM_JOOBB_LATESTPOSTYEARS" description="COM_JOOBB_LATESTPOSTYEARSDESC" />
	</params>
</install>
