<install version="1.5" type="component">
	<name>Attachment Configuration</name>
	<author>Joo!BB Project</author>
	<copyright>(C) 2007-2012 Joo!BB. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>n/a</authorEmail>
	<authorUrl>http://www.joobb.org</authorUrl>
	<version>1.0.0</version>
	<description>Parameters for individual Attachment Configuration</description>
	<params>
		<param name="enable_attachments" type="radio" default="1" label="COM_JOOBB_ENABLEATTACHMENTS" description="COM_JOOBB_ENABLEATTACHMENTSDESC">
			<option value="0">COM_JOOBB_NO</option>
			<option value="1">COM_JOOBB_YES</option>
		</param>
		<param name="attachment_max" type="text" size="5" default="3" label="COM_JOOBB_ATTACHMENTMAX" description="COM_JOOBB_ATTACHMENTMAXDESC" />
		<param name="attachment_max_file_size" type="text" size="10" default="512000" label="COM_JOOBB_ATTACHMENTMAXFILESIZE" description="COM_JOOBB_ATTACHMENTMAXFILESIZEDESC" />
		<param name="attachment_file_types" type="text" size="50" default="jpg,png,gif,bmp,zip" label="COM_JOOBB_ATTACHMENTFILETYPES" description="COM_JOOBB_ATTACHMENTFILETYPESDESC" />
		<param name="attachment_path" type="text" size="50" default="media/joobb/attachments" label="COM_JOOBB_ATTACHMENTPATH" description="COM_JOOBB_ATTACHMENTPATHDESC" />
	</params>
</install>